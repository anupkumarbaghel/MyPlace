@model ProductDetail
@{
    ViewBag.MetaDescription = "";
    ViewBag.Title = "Product Detail";
}
<style>
  
    .video-container {
        position: relative;
        padding-bottom: 56.25%;
        padding-top: 30px;
        height: 0;
        overflow: hidden;
    }

        .video-container iframe,
        .video-container object,
        .video-container embed {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
</style>
<div class="row">
    <div class="col-sm-6">
        <div class="well">
            <img src="@Model.ImageUrl1" id="image1" />
        </div>
    </div>
    <div class="col-sm-6">
       <div class="text-info lead well">
          @Html.DisplayFor(model => model.Specification);
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-6">
        <div class="well">
            <img src="@Model.ImageUrl2" id="image2" />
            
        </div>
    </div>
    <div class="col-sm-6">
        <div class="well">
            <img src="@Model.ImageUrl3" id="image3" />
         
        </div>
    </div>
</div>

<div class="row">

    <div class="col-sm-6">
        <div class="well">
            <img src="@Model.ImageUrl4" id="image4" />

        </div>
    </div>
    <div class="col-sm-6">
        <div class="row well" id="forVideo">
            <div class="video-container" id="forVideo1">
                @Html.Raw(@Model.VideoUrl1)
            </div>
        </div>
    </div>
   
</div>


@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            if ($('#forVideo1').children('iframe').length > 0) {
                $('#forVideo').addClass('show');
            }
            else {
                $('#forVideo').addClass('hide');
            }

        });
    </script>
    }