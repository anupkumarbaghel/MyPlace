@model ProductDetail
@{
    ViewBag.Title = "ProductDetail";
}

<div class="row">
    <div class="col-sm-6">
        <div class="well">
            <img src="@Model.ImageUrl1" id="image1" />
            <a href="#" class="btn btn-primary" id="btnImage1">Upload Detail Image 1</a>
            <input type="file" name="HmDescMainImage" id="inputImage1" style="visibility:hidden" />
        </div>
    </div>
    <div class="col-sm-6">
        @using (Html.BeginForm())
        {
            <div class="well">
                @Html.TextAreaFor(model => model.Specification, new { @placeholder = "Fill Product Specification", @style = "height:100%;width:100%" })
                @Html.TextBoxFor(model => model.VideoUrl1, new { @class = "input-sm", @placeholder = "Go to YouTube.com > YourVideo > Share > Embed" })

                <button type="submit" class="btn btn-primary pull-right">Save</button>
            </div>
        }
    </div>
</div>
